@page
@model RazorPageEventMaker.Pages.Events.DeleteEventModel
@{
    ViewData["Title"] = "Delete Event";
}
<h1>Delete event</h1>
<p>
    <h2>Do you wanna delete this event?</h2>
    <h3>ID @Model.Event.Id</h3>
    <h3>Name @Model.Event.Name</h3>
    <form method="post">
        <input asp-for="@Model.Event.Id" type="hidden" />
        <input type="submit" value="Delete" />
        <a asp-page="Index">Cancel</a>
    </form>
</p>

